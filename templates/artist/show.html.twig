{% extends 'base.html.twig' %}

{% block title %}Artist{% endblock %}

{% block body %}
    <h1>Artist</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ artist.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ artist.name }}</td>
            </tr>
            <tr>
                <th>Job</th>
                <td>{{ artist.job }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ artist.description }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('galerie_index') }}">Tous les artistes</a>
    {% if is_granted('ROLE_ADMIN') %}
    <a href="{{ path('galerie_edit', {'id': artist.id}) }}">Modifier</a>
    {{ include('artist/_delete_form.html.twig') }}
    {% endif %}
{% endblock %}
