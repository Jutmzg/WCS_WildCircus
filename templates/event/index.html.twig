{% extends 'base.html.twig' %}

{% block title %}Spectacles{% endblock %}

{% block body %}


    <div class="container">
        <h1>Spectacles</h1>
        {% if is_granted('ROLE_ADMIN') %}
        <a href="{{ path('event_new') }}">Nouveau spectacle</a>
        {% endif %}
        <div class="row">
            {% for event in events %}
                <img src="{{ asset('images/Spectacles/'~event.img) }}" class="card-img-top" alt="spectacle">
                <div class="card-body">
                    <h5 class="card-title">{{ event.title }}</h5>
                    <p class="card-text">{{ event.description }}</p>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">{{ event.type }}</li>
                    <li class="list-group-item">{{ event.place }}</li>
                    <li class="list-group-item">{{ event.date ? event.date|date('Y-m-d H:i:s') : '' }}</li>
                    <li class="list-group-item">
                        {% for artist in event.artist %}
                            {{ artist.name }}
                        {% endfor %}
                    </li>
                </ul>
                <div class="card-body">
                    <a href="{{ path('event_show', {'id': event.id}) }}" class="card-link">Voir</a>
                    <a href="{{ path('app_login') }}" class="card-link">RÃ©server</a>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
